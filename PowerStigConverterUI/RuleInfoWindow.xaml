<Window x:Class="PowerStigConverterUI.RuleInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rule Info" Height="520" Width="720"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0">
            <TextBlock x:Name="RuleHeader" FontSize="16" FontWeight="Bold" TextWrapping="Wrap"/>
            <TextBlock x:Name="TitleText" Margin="0,6,0,0" FontSize="14" TextWrapping="Wrap"/>
            <TextBlock x:Name="SeverityText" Margin="0,2,0,0" TextWrapping="Wrap"/>
            <TextBlock x:Name="SvIdText" Margin="0,2,0,0" TextWrapping="Wrap"/>
        </StackPanel>

        <TabControl Grid.Row="1" Margin="0,8,0,8">
            <TabItem Header="Description">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Fix">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="FixTextBlock" TextWrapping="Wrap" />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="References (XML)">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="RefsTextBox" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Converted Snippet">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="ConvertedFileText" Grid.Row="0" TextWrapping="Wrap" FontWeight="SemiBold"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="ConvertedSnippetText" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Close" Width="100" Padding="12,6" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>