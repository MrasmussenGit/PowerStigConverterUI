<Window x:Class="PowerStigConverterUI.CompareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compare DISA vs PowerSTIG" Height="460" Width="875"
        WindowStartupLocation="CenterOwner"
        UseLayoutRounding="True" SnapsToDevicePixels="True">
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="ResultCountStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
        <Style x:Key="ResultListStyle" TargetType="ListView">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="2,1"/>
            <Setter Property="MinHeight" Value="18"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="2"
                   Text="Select files and press Compare"
                   FontWeight="Bold"
                   FontSize="13"
                   Margin="0,0,0,8"/>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,8,10">
            <TextBlock VerticalAlignment="Center" Text="DISA file:" Margin="0,0,6,0" FontSize="12"/>
            <TextBox x:Name="DisaPathTextBox" Width="240" Margin="0,0,6,0"/>
            <Button Content="Browse…" Width="84" Click="BrowseDisa_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock VerticalAlignment="Center" Text="PowerSTIG file:" Margin="0,0,6,0" FontSize="12"/>
            <TextBox x:Name="PsPathTextBox" Width="240" Margin="0,0,6,0"/>
            <Button Content="Browse…" Width="84" Click="BrowsePs_Click"/>
        </StackPanel>

        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <!-- Make result columns narrower and content-sized -->
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,6">
                <Button Content="Compare" Width="84" Click="Compare_Click"/>
                <TextBlock x:Name="InfoTextBlock" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="12"/>
            </StackPanel>

            <!-- Matched on the left -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="Matched (common IDs)" Margin="0,0,6,0" Width="260">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="MatchedCountTextBlock" Style="{StaticResource ResultCountStyle}"/>
                    <ListView x:Name="MatchedListView"
                              Grid.Row="1"
                              Style="{StaticResource ResultListStyle}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              ScrollViewer.CanContentScroll="True"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              MouseDoubleClick="MatchedListView_MouseDoubleClick"/>
                </Grid>
            </GroupBox>

            <!-- Missing in the middle -->
            <GroupBox Grid.Row="1" Grid.Column="1" Header="Missing (in PowerSTIG)" Margin="3,0,3,0" Width="260">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="MissingCountTextBlock" Style="{StaticResource ResultCountStyle}"/>
                    <ListView x:Name="MissingListView"
                              Grid.Row="1"
                              Style="{StaticResource ResultListStyle}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              ScrollViewer.CanContentScroll="True"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              MouseDoubleClick="MissingListView_MouseDoubleClick"/>
                </Grid>
            </GroupBox>

            <!-- Added on the right -->
            <GroupBox Grid.Row="1" Grid.Column="2" Header="Added (extra in PowerSTIG)" Margin="6,0,0,0" Width="260">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="AddedCountTextBlock" Style="{StaticResource ResultCountStyle}"/>
                    <ListView x:Name="AddedListView"
                              Grid.Row="1"
                              Style="{StaticResource ResultListStyle}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              ScrollViewer.CanContentScroll="True"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              MouseDoubleClick="AddedListView_MouseDoubleClick"/>
                </Grid>
            </GroupBox>
        </Grid>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Close" Width="84" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>