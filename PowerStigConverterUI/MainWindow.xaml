<Window x:Class="PowerStigConverterUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PowerStig Converter UI" Height="260" Width="360"
        Background="LightSteelBlue"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Centered and stacked buttons in the middle row -->
        <StackPanel Orientation="Vertical"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button x:Name="ConvertStigButton"
                    Content="Convert STIG"
                    Width="220"
                    Padding="12,8"
                    Margin="0,0,0,10"
                    Click="ConvertStigButton_Click"/>
            <Button x:Name="CompareButton"
                    Content="Compare"
                    Width="220"
                    Padding="12,8"
                    Margin="0,0,0,10"
                    Click="CompareButton_Click"/>
            <Button x:Name="SplitStigButton"
                    Content="Split OS STIG"
                    Width="220"
                    Padding="12,8"
                    Margin="0,0,0,10"
                    Click="SplitOsStigButton_Click"/>
            <Button x:Name="ExitButton"
                    Content="Exit"
                    Width="220"
                    Padding="12,8"
                    Margin="0,0,0,12"
                    Click="ExitButton_Click"/>

            <TextBlock x:Name="VersionTextBlock"
                       Text="Version"
                       Foreground="DarkGreen"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <ContentPresenter Grid.Row="2"/>
    </Grid>
</Window>
