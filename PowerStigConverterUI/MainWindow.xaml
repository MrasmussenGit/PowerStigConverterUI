<Window x:Class="PowerStigConverterUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PowerStig Converter" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Padding="24" CornerRadius="8" Background="#2D2D30">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" >
                <TextBlock Text="PowerStig Converter"
                           Foreground="White" FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,16" />

                <Button x:Name="ConvertStigButton"
                        Content="Convert Stig"
                        Margin="0,8,0,8" Padding="12"
                        Click="ConvertStigButton_Click" />

                <Button x:Name="CompareButton"
                        Content="Compare"
                        Margin="0,8,0,8" Padding="12"
                        Click="CompareButton_Click" />

                <Separator Margin="0,8,0,8" />

                <Button x:Name="ExitButton"
                        Content="Exit"
                        Margin="0,8,0,0" Padding="12"
                        Click="ExitButton_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
